---
import { Image } from 'astro:assets'
import pa_eingang_01 from '../assets/images/pa58_images/pa_eingang_01.jpg'
import pa_garten from '../assets/images/pa58_images/pa_garten.jpg'
import pa_innenhof from '../assets/images/pa58_images/pa_innenhof.jpg'
import pa_oase from '../assets/images/pa58_images/pa_oase.jpg'
import pa_straße from '../assets/images/pa58_images/pa_straße.jpg'
import Article from '../components/Article.astro'
import { Content as PA58_text } from '../content/pages/pa58.md'
import Layout from '../layout/Layout.astro'
---

<Layout title="PA 58">
  <h1 class="text-3xl font-merri font-semibold mb-5 md:mt-15 mt-5">PA 58</h1>
  <div class="flex flex-col lg:flex-row justify-between">
    <div class="w-full lg:w-3/5 lg:pr-15">
      <Article>
        <PA58_text />
      </Article>
    </div>
    <div class="flex flex-col lg:w-2/5 gap-3">
      <Image
        src={pa_straße}
        alt="PA58 Street"
        class="h-auto w-full rounded-sm"
      />
      <Image
        src={pa_eingang_01}
        alt="PA58 Entrance"
        class="h-auto w-full rounded-sm"
      />
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-y-5 lg:gap-x-5 mt-5">
    <Image
      src={pa_oase}
      alt="PA58 First backyard"
      class="h-auto w-full rounded-sm"
    />
    <Image
      src={pa_innenhof}
      alt="PA58 Second backyard"
      class="h-auto w-full rounded-sm"
    />
  </div>
  <div class="mt-5">
    <Image src={pa_garten} alt="PA58 Garden" class="h-auto w-full rounded-sm" />
  </div>
</Layout>
